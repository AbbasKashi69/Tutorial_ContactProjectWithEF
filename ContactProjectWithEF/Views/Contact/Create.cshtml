@using ContactProjectWithEF.Models.Entities
@model Contact

@{
    List<Group>? groups = null;
    if (ViewData["Groups"] is List<Group>)
        groups = ViewData["Groups"] as List<Group>;
}


<div>
    <form asp-controller="contact" method="post">
        <div class="form-group">
            <label asp-for="FirstName"> نام</label>
            <input type="text" class="form-control" asp-for="FirstName" />
        </div>
        <div class="form-group">
            <label asp-for="LastName"> نام خانوادگی</label>
            <input type="text" class="form-control" asp-for="LastName" />
        </div>
        <div class="form-group">
            <label asp-for="Mobile"> موبایل</label>
            <input type="text" class="form-control" asp-for="Mobile" />
        </div>
        <div class="form-group">
            <label asp-for="Phone"> تلفن</label>
            <input type="text" class="form-control" asp-for="Phone" />
        </div>
        <div class="form-group">
            <label asp-for="GroupId"> گروه</label>
            <select asp-for="GroupId" class="form-control">
                @if (groups is { Count: > 0 })
                {
                    foreach (var group in groups)
                    {
                        <option value="@group.Id">@group.Name</option>
                    }
                }
            </select>

        </div>
        @if (Model is not null && Model.Id > 0)
        {
            <input type="submit" class="btn btn-primary" asp-action="edit" value="ثبت" />
        }
        else
        {

            <input type="submit" class="btn btn-primary" asp-action="create" value="ثبت" />
        }

    </form>
</div>